{
  "name": "lore-monorepo",
  "private": true,
  "version": "0.0.0",
  "description": "This is the monorepo for Lore",
  "license": "MIT",
  "scripts": {
    "lerna:bootstrap": "lerna bootstrap",
    "lerna:updated": "lerna updated",
    "lerna:publish": "lerna publish",

    "check": "npm run lint && npm run test",
    "clean:lore": "cd lore && npm run clean",
    "clean": "npm run clean:lore",

    "clean:node:root": "rm -rf node_modules",
    "clean:node:packages": "rm -rf packages/**/node_modules",
    "clean:node": "npm run clean:node:packages && npm run clean:node:root",

    "clean:all": "npm run clean && npm run clean:node",

    "lint": "echo 'tbd: implement me.'",
    "x-postinstall": "npm run install:lore && npm run install:lore-cli",

    "test:lore": "cd lore && npm test",
    "test:lore-cli": "cd lore-cli && npm test",
    "test": "npm run test:lore && npm run test:lore-cli"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lore/lore.git"
  },
  "bugs": {
    "url": "https://github.com/lore/lore/issues"
  },
  "homepage": "https://github.com/lore/lore#readme",
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "6.5.1",
    "babel-core": "6.5.1",
    "babel-loader": "6.2.3",
    "babel-preset-es2015": "6.5.0",
    "babel-preset-react": "6.5.0",
    "lerna": "1.1.1"
  },
  "peerDependencies": {}
}
